{
  "Content": {
    "page_title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Page Title",
        "placeholder": "Insert page title"
      }
    },
    "page_description": {
      "type": "Text",
      "config": {
        "label": "Page Description",
        "placeholder": "Insert short description of page"
      }
    },
    "show_page_title": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "No",
        "placeholder_true": "Yes",
        "default_value": false,
        "label": "Show Page Title"
      }
    },
    "show_page_description": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "No",
        "placeholder_true": "Yes",
        "default_value": false,
        "label": "Show Page Description"
      }
    },
    "title_color_scheme": {
      "type": "Text",
      "config": {
        "label": "Title Color Scheme",
        "placeholder": "Insert name of color scheme"
      }
    },
    "last_updated": {
      "type": "Timestamp",
      "config": {
        "label": "Last Updated",
        "placeholder": "Insert last date this text got updated"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "rich_text_editor": [
            {
              "display": "Classic",
              "name": "classic"
            }
          ]
        },
        "choices": {
          "rich_text_editor": {
            "type": "Slice",
            "fieldset": "Rich Text Editor",
            "description": "An editor with a rich text field",
            "icon": "format_textdirection_l_to_r",
            "display": "list",
            "non-repeat": {
              "rich_text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl",
                  "allowTargetBlank": true,
                  "label": "Rich Text",
                  "placeholder": "Insert rich text"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Navigation": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "Slug",
        "placeholder": "Insert url for page"
      }
    }
  },
  "SEO": {
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "Meta Title",
        "placeholder": "Insert SEO friendly page title"
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "Meta Description",
        "placeholder": "Insert SEO friendly page description"
      }
    },
    "meta_index_page": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "No",
        "placeholder_true": "Yes",
        "default_value": true,
        "label": "Meta Index Page"
      }
    },
    "meta_twitter_creator": {
      "type": "Text",
      "config": {
        "label": "Meta Twitter Creator"
      }
    },
    "meta_type": {
      "type": "Select",
      "config": {
        "options": ["Website", "Article", "Blog"],
        "label": "Meta Type"
      }
    },
    "meta_twitter_card": {
      "type": "Select",
      "config": {
        "options": ["Summary", "Summary Large Image", "App", "Player"],
        "label": "Meta Twitter Card"
      }
    },
    "meta_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1200,
          "height": 627
        },
        "thumbnails": [],
        "label": "Meta Image"
      }
    }
  }
}
